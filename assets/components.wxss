/* 两行文字 */
.g-twoline {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	word-break:break-all;
}
/* 标签 */
.g-label-gray {
	padding: 2px 15px;
	background:#f4f4f4;
	border-radius:100px;
	height:28px;
	font-size:14px;
	color:#929292;
	line-height: 28px;
	text-align: center;
	font-weight: 200;
}
/* 头像 */
.g-avatar {
	background:#d8d8d8;
	border-radius:8px;
