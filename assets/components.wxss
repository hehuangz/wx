/* components */

/* button0-实心的固定宽度的按钮 */
.g-bt-orange-s {
	min-width: 102px;
	height: 32px;
	background: #ff4b2d;
	color: #fff;
	font-size: 12px;
	line-height: 32px;
	text-align: center;
	border-radius: 100px;
	font-weight: 200;
}
.g-bt-gray-s {
	min-width: 102px;
	height: 32px;
	background: #d8d8d8;
	color: #fff;
	font-size: 12px;
	line-height: 32px;
	text-align: center;
	border-radius: 100px;
	font-weight: 200;
}

.g-bt-orange-m {
	width: 180px;
	height: 50px;
	background: #ff4b2d;
	color: #fff;
	font-size: 20px;
