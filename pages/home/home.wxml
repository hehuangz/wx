<!--home.wxml-->
<view class="container" wx:if="{{show}}">
	<!-- 获取用户信息和定位 -->
	<dialog id='dialog' 
		title='我是标题' 
		content='是否允许我们使用定位和用户信息' 
		cancelText='不好' 
		confirm='可以'
		bind:cancelEvent="_cancelEvent"  
		bind:confirmEvent="_confirmEvent">
    </dialog>
	<!-- 顶部搜索栏 -->
	<view 
		class="top g-width g-bs-bb g-bg-white g-flex g-jc-sb g-height-30 g-lh-30 g-fs-30 g-pd-lr-30 g-pd-t-5 g-pd-b-15 g-fixed"
		style="height: 40px"
	>
		<text class="icon-shouji g-c-orange g-fs-24 g-m-r-10"></text>
		<input 
			type="search" 
			placeholder="查找您想要的" 
			class="g-fs-12 g-width g-br-oval g-pd-lr-10"
			placeholder-style="color:#e6e6e6" 
		/>
	</view>

	<!-- 顾问切换 -->
	<swiper 
		class="g-width card"
		indicator-dots="true"
		circular="true"
	>
		<block wx:for="{{imgUrls}}" wx:key="index">
			<swiper-item>
				<view class="_swiper-item g-flex">
					<image class="__img g-m-r-10" mode="widthFix" ></image>
					<view class="__content g-fd-c g-jc-sb">
						<view class="g-m-b-5"> 
							<text class="g-fs-16 g-m-r-5">zhangsjhd</text>
							<text class="icon-shouji g-c-blue g-fs-16 g-m-r-5" />
							<block wx:for="{{[1,2,3,4,5]}}"><text class="icon-shouji g-c-yellow g-fs-12 g-m-r-5"/></block>
						</view>
						<view class="g-c-yellow g-fs-12 g-m-b-10">商品顾问</view>
						<view class="g-fs-12">sdfdsfgdf</view>
					</view>
				</view>
			</swiper-item>
		</block>
	</swiper>	
	<!-- 商品列表tab栏 -->
	<view class="swiper-tab">
		<view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">全部</view>
		<view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">提现中</view>
		<view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">已提现</view>
	</view>

	<swiper current="{{0}}" duration="300" bindchange="swiperTab" class="goods-container">
		<swiper-item class="goods-list">
			<block wx:for="{{[1,2,3,4]}}" wx:key="index">
				<goods id="goods" style="width:45%" price="144" oldPrice="1000" />
			</block>
		</swiper-item>
	</swiper>
</view>
<lose wx:else id="lose" icon="icon-shouji" title="当前网络不稳定，请刷新重试～" refresh="true"></lose>
