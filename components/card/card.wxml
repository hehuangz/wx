<!-- card -->   
<view class="c-card g-flex {{classes}}" style="{{styles}}" catchtap='_cardEvent'>
	<image class="__img g-m-r-10 g-fs-0" mode="aspectFill" src="{{img}}"></image>
	<view class="__content g-fd-c g-jc-sb g-width">
		<view class="g-m-b-5"> 
			<text class="g-fs-14 g-m-r-5">{{name}}</text>
			<text class="{{sex==0?'icon-shouji1':'icon-shouji'}} iconfont  g-c-blue g-fs-16 g-m-r-5" />
			<block wx:for="{{[1,2,3,4,5]}}" wx:key="index" >
				<text class="iconfont icon-shouji g-c-yellow g-fs-12 g-m-r-5"/>
			</block>
		</view>
		<view class="g-c-yellow g-fs-12 g-m-b-10 g-c-9b9b9b">商品顾问</view>
		<view class="g-fs-12 g-twoline g-c-9b9b9b">{{explain}}</view>
	</view>
</view>